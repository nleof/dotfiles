export EDITOR=vim

export LOCALBIN="$HOME/.local/bin:$HOME/bin"

export GOLOCAL="/usr/local/go/bin"
export GOPATH="$HOME/dev/go"
export GOBIN="$GOPATH/bin"

export TFENV="$HOME/.tfenv/bin"
export TFENV_TERRAFORM_VERSION="min-required"

export PATH="$PATH:$TFENV:$LOCALBIN:$GOLOCAL:$GOBIN"

export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"
export TERM=xterm

source_env_if_exists $HOME/.envrc_private
source_env_if_exists $HOME/.cargo/env
