font pango:Iosevka 9

exec firefox
exec MOZ_ENABLE_WAYLAND=1 thunderbird
exec emacs
exec $term
exec nm-applet --indicator
exec mako
exec QT_QPA_PLATFORM=wayland keepassxc

assign [app_id="emacs"] $ws2
assign [app_id="firefox"] $ws3
assign [app_id="google-chrome"] $ws3
assign [app_id="thunderbird"] $ws4
assign [app_id="org.keepassxc.KeePassXC"] $ws5

output $output1 scale 2 pos 0 100
output $output2 transform 270 res 1920x1200 pos 1920 0
output $output2 disable

# workspace $ws5 output $output2

