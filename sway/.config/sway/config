### Variables
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
set $term alacritty -e fish
# set $term foot
# set $menu dmenu_path | dmenu | xargs swaymsg exec --
set $menu wofi --show=drun --lines=5 --prompt=""
set $lock swaylock -k -l -c 222222
set $lockd swaylock -f -k -l -c 222222

set $ws1 1: zsh
set $ws2 2: dev
set $ws3 3: www
set $ws4 4: pop
set $ws5 5: kdb

set $output1 DP-3
set $output2 HDMI-A-1

input * xkb_options compose:ralt

# exec swayidle -w \
