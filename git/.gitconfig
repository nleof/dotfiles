[user]
name = Alexandre Leroux
email = alexandre@yawp.fr

[branch]
autosetupmerge = true
autosetuprebase = always

[core]
editor = vi

[alias]
st = status
ci = commit
br = branch
co = checkout
df = diff
dc = diff --cached
lg = log -p
lol = log --graph --decorate --pretty=oneline --abbrev-commit
lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
ls = ls-files

[url "ssh://git@github.com/nleof"]
insteadOf = https://github.com/nleof

[url "ssh://git@gitlab.infra.online.net"]
insteadOf = https://gitlab.infra.online.net

[includeIf "gitdir:~/dev/scw/"]
path = .gitconfig-scaleway

[includeIf "gitdir:~/dev/github/"]
path = .gitconfig-github

[includeIf "gitdir:~/dev/360/"]
path = .gitconfig-360
