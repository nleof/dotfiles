!!
!! font
!!

Xft.autohint:  true
Xft.lcdfilter: lcddefault
!Xft.hintstyle: hintslight
Xft.hintstyle: hintfull
Xft.hinting:   true
Xft.antialias: true
Xft.dpi:       96
!xdpyinfo | grep dots
Xft.rgba:      rgb


!!
!! XTerm
!!

!XTerm*faceName:           xft:Source Code Pro:style=Medium:size=9
!XTerm*faceName:           xft:Tewi:size=8
!XTerm*faceName:           xft:Terminus:size=8
!URxvt*font:           xft:xos4 Terminus:size=8
URxvt*font: xft:Bitstream Vera Sans Mono:autohint=true:pixelsize=12
URxvt*scrollBar: false
URxvt*keysym*Control-Left:    \033[1;5D
URxvt*keysym*Control-Right:    \033[1;5C
URxvt*perl-ext:
URxvt*perl-ext-common:

XTerm*faceName:           xft:xos4 Terminus:size=8
XTerm*font:               fixed
XTerm*boldFont:           fixed
XTerm*boldMode:           false
XTerm*allowBoldFonts:     false
XTerm*showBlinkAsBold:    true
XTerm*dynamicColors:      true
XTerm*utf8:               2
XTerm*locale:             true
XTerm*eightBitInput:      true
XTerm*saveLines:          512
XTerm*scrollTtyOutput:    false
XTerm*scrollBar:          false
XTerm*jumpScroll:         true
XTerm*multiScroll:        true
XTerm*fastScroll:         true
XTerm*toolBar:            false
XTerm*termName:           xterm-256color
XTerm*borderWidth:        0
XTerm*metaSendsEscape:    true
XTerm*highlightSelection: true
XTerm*scrollKey:          true
XTerm*sessionMgt:         false
XTerm*cursorBlink:        true
!! Select url, alt+click => firefox
XTerm*charClass:          33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
*VT100*translations:      #override Meta <Btn1Up>: exec-formatted("firefox '%t'", PRIMARY)

!!
!! colors
!!
*.foreground:   #303030
*.background:   #ffffff
*.cursorColor:  #303030

! black
*.color0:       #151515
*.color8:       #505050

! red
*.color1:       #ac4142
*.color9:       #ac4142

! green
*.color2:       #90a959
*.color10:      #90a959

! yellow
*.color3:       #f4bf75
*.color11:      #f4bf75

! blue
*.color4:       #6a9fb5
*.color12:      #6a9fb5

! magenta
*.color5:       #aa759f
*.color13:      #aa759f

! cyan
*.color6:       #75b5aa
*.color14:      #75b5aa

! white
*.color7:       #d0d0d0
*.color15:      #f5f5f5
